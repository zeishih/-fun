/* pages/profile/profile.wxss */
.profile-container {
  padding: 30rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
  overflow: hidden;
}

/* 用户卡片样式 */
.user-card {
  padding: 40rpx;
}

.user-header {
  display: flex;
  align-items: center;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.user-level {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.level-text {
  font-size: 24rpx;
  color: #004cff;
  margin-right: 20rpx;
  font-weight: bold;
}

.level-bar {
  flex: 1;
  height: 14rpx;
  background: #e0e0e0;
  border-radius: 7rpx;
  overflow: hidden;
}

.level-progress {
  height: 100%;
  background: linear-gradient(90deg, #004cff, #3a82ff);
  border-radius: 7rpx;
}

.join-date {
  font-size: 24rpx;
  color: #888;
}

.login-btn-container {
  margin-top: 20rpx;
}

.login-btn {
  background-color: #004cff;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  font-weight: 500;
  display: inline-block;
}

.user-stats {
  display: flex;
  margin-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  padding-top: 30rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 26rpx;
  color: #888;
}

/* 菜单样式 */
.menu-section {
  padding: 0;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

