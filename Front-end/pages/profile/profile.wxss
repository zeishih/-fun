.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.logout-text {
  color: #ff4757;
}

.logout-item {
  margin-top: 20rpx;
  border-top: 8rpx solid #f5f7fa;
}

.menu-right {
  display: flex;
  align-items: center;
}

.notification-badge {
  background: #ff4757;
  color: white;
  font-size: 24rpx;
  border-radius: 20rpx;
  padding: 4rpx 12rpx;
  margin-right: 20rpx;
}

.menu-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(45deg);
}

/* 勋章区域样式 */
.badges-section {
  margin-bottom: 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.h2 {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  position: relative;
  padding-left: 24rpx;
}

.h2::before {
  content: '';
  position: absolute;
  left: 0;
  top: 8rpx;
  height: 30rpx;
  width: 8rpx;
  background: #004cff;
  border-radius: 4rpx;
}

.badges-list {
  padding: 20rpx;
}

.badge-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.badge-item:last-child {
  border-bottom: none;
}

.badge-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.badge-info {
  flex: 1;
}

.badge-name {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.badge-date {
  font-size: 24rpx;
  color: #888;
}

.empty-badges {
  padding: 60rpx 0;
  text-align: center;
  color: #888;
  font-size: 28rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 24rpx;
} 