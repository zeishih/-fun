/* 页面容器 */
.container {
  padding: 24rpx;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #f7f7f7;
}

/* 搜索区域 */
.search-box {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background-color: #fff;
  border-radius: 36rpx;
  padding: 0 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.05);
}

.search-input icon {
  margin-right: 12rpx;
}

.search-input input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
}

.search-btn {
  margin-left: 20rpx;
  height: 72rpx;
  line-height: 72rpx;
  padding: 0 30rpx;
  background-color: #3cc51f;
  color: #fff;
  font-size: 28rpx;
  border-radius: 36rpx;
}

/* 搜索历史 */
.search-history {
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.clear-history {
  color: #999;
  font-size: 26rpx;
}

.history-list {
  display: flex;
  flex-wrap: wrap;
}

.history-item {
  background-color: #f2f2f2;
  color: #666;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

/* 图书列表 */
.book-list {
  margin-bottom: 30rpx;
}

.book-item {
  display: flex;
  padding: 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 0 8rpx rgba(0, 0, 0, 0.05);
}

.book-cover {
  width: 160rpx;
  height: 220rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
  background-color: #f2f2f2;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  overflow: hidden;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.book-author {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.book-description {
  font-size: 24rpx;
  color: #999;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 加载更多 */
.loading-more {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 无数据提示 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.no-data image {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 20rpx;
}

.no-data text {
  font-size: 28rpx;
  color: #999;
} 