/* pages/profile/profile.wxss */
.profile-container {
  padding: 30rpx;
}

/* 用户信息卡片 */
.user-card {
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.user-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid var(--primary-300);
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 15rpx;
}

.user-level {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.level-text {
  font-size: 24rpx;
  color: var(--primary-500);
  font-weight: bold;
  margin-right: 15rpx;
}

.level-bar {
  flex: 1;
  height: 12rpx;
  background-color: var(--neutral-400);
  border-radius: 6rpx;
  overflow: hidden;
}

.level-progress {
  height: 100%;
  background-color: var(--primary-500);
  border-radius: 6rpx;
}

.join-date {
  font-size: 24rpx;
  color: var(--neutral-700);
}

.user-stats {
  display: flex;
  border-top: 1rpx solid var(--neutral-500);
  padding-top: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--neutral-700);
}

/* 菜单部分 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid var(--neutral-500);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

