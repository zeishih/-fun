.menu-text {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-color);
}

.menu-right {
  display: flex;
  align-items: center;
}

.notification-badge {
  background-color: var(--primary-500);
  color: white;
  font-size: 20rpx;
  height: 36rpx;
  min-width: 36rpx;
  border-radius: 18rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 8rpx;
  margin-right: 15rpx;
}

.menu-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid var(--neutral-700);
  border-right: 3rpx solid var(--neutral-700);
  transform: rotate(45deg);
}

/* 勋章部分 */
.badges-section {
  margin-bottom: 30rpx;
}

.section-header {
  margin-bottom: 20rpx;
}

.badges-container {
  padding: 20rpx;
}

.badges-list {
  display: flex;
  flex-direction: column;
}

.badge-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid var(--neutral-500);
}

.badge-item:last-child {
  border-bottom: none;
}

.badge-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.badge-info {
  display: flex;
  flex-direction: column;
}

.badge-name {
  font-size: 28rpx;
  font-weight: bold;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.badge-date {
  font-size: 24rpx;
  color: var(--neutral-700);
}

.empty-badges {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  color: var(--neutral-700);
  font-size: 28rpx;
}

/* 版本信息 */
.version-info {
  text-align: center;
  font-size: 24rpx;
  color: var(--neutral-700);
  margin-top: 60rpx;
  margin-bottom: 30rpx;
} 